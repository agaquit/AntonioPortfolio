@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Home - Antonio's Portfolio</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-rbs5kPKGIdE2UHJlDXwW5l9m7Jj5AbLK5Ei5kgXsA6XwOD11T8r/SOrPbzPNIz6" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        h1 {
            color: #007bff;
            text-align: center;
            margin: 20px 0;
        }

        .navbar {
            background-color: transparent; /* Updated to make the navbar background transparent */
        }

        .navbar-brand,
        .navbar-nav .nav-link {
            color: #ffffff;
        }

            .navbar-brand:hover,
            .navbar-nav .nav-link:hover {
                color: #f8f9fa;
            }

        /* Updated to make the welcome section background transparent */
        .welcome-section {
            background-color: transparent;
            padding: 50px 0;
            text-align: center;
            color: #ffffff;
        }

            .welcome-section h1 {
                font-size: 2.5rem;
                font-weight: bold;
            }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <!-- Navbar content goes here, if you decide to add any -->
        </div>
    </nav>

    <section class="welcome-section">
        <div class="container">
            <h1 class="display-4">Welcome to Antonio's Portfolio</h1>
        </div>
    </section>

    <!-- Bootstrap JS and Popper.js (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>

</body>
</html>